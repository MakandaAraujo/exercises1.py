#1
numero1 = float (input ('olá me diga um número! '))
print (numero1)
numero2 = float (input('Certinho, agora me diz um outro número! '))
print (numero2)

print('Aqui está a soma, subtração, multiplicação, divisão e resto da divisão ')
print ('Essa é a soma: ',numero1+numero2)
print ('Essa é a subtração: ',numero1-numero2)
print ('Essa é a multiplicação: ',numero1*numero2)
print ('Essa é a divisão: ',numero1/numero2)
print ('Essa é o resto da divisão: ',numero1%numero2)

#2
numero1 = int (input ('olá me diga um número! '))
print('Aqui está o seu sucessor',numero1+1)
print('Aqui está o seu antecessor',numero1-1)

#3
numero1 = int (input ('olá me diga um número! '))
print('Aqui está o seu dobro',numero1*2)
print('Aqui está o seu triplo',numero1*3)
print('Aqui está a sua metade',numero1/2)

#4
numero1 = float (input ('olá me diga um número! '))
numero2 = float (input ('olá me diga um outro número! '))
numero3 = float (input ('olá me diga um outro número! '))
print('Aqui está a média aritimetica',(numero1+numero2+numero3)/3)

#5
valorProduto1 = float (input ('olá me diga quanto custou seu produto! '))
print ('Assim seria se seu produto tivesse 10% de desconto: ',valorProduto1*0.9)
print ('Assim seria se seu produto tivesse 20% de desconto: ',valorProduto1*0.8)
print ('Assim seria se seu produto tivesse 50% de desconto: ',valorProduto1*0.5)

#6
salario = float (input ('Escreva aqui quanto seria seu sálario '))
(print('Assim seria se seu sálario tivesse 10% de aumento para acompanhar a inflação: ',salario*1.1))

#7 CORRIGIR
numero1 = float (input ('Escreva aqui um número para descobrir se ele é impar ou par '))
mod = numero1%2
if mod == 0:
    print('seu numéro é par ')
else:
    print('seu número é impar')

#8
nota1 = float (input ('Escreva aqui sua primeira nota '))
nota2 = float (input('Escreva a sua segunda nota agora '))
media = (nota1+nota2)/2
print('sua média foi de: ',media)
if media >= 7 and media < 10:

    print('Aprovado')
elif media < 7:
    print('Reprovado')
else:
    print('Aprovado com destinção')

#9
#LISTAS
produtos = ['Sabão','Detergente']
item = input('Escreva qual produto você deseja acressentar a lista ')
produtos.append(item)
for variavel in produtos:
    print (variavel)
print(produtos[0])

#10
#MUDAR VARIAVEL DENTRO DA LISTA
produtos = ['Sabão','Detergente']
item = input('Escreva qual produto você deseja acressentar a lista ')
produtos.append(item)
for variavel in produtos:
    print (variavel)
produtos [0] = 'Batata'
print(produtos[0])


